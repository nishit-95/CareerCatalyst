@model IEnumerable<DatabaseLayer.CountryTable>

@{
    ViewBag.Title = "Countries";
}

<div class="section-top-border col-md-10">
    <h3 class="mb-30">All Countries @Html.ActionLink("New Countries", "Create", null, new { @class = "btn btn-default", @style = "float:right;" }) </h3>
    
    <div class="progress-table-wrap">
        <div class="progress-table">
            <div class="table-head">
                <div class="serial">#</div>
                <div class="country">Country</div>
                <div class="visit">Action</div>
            </div>

            @foreach (var item in Model)
            {
                <div class="table-row">
                    <div class="serial">01</div>
                    <div class="country"> @Html.DisplayFor(modelItem => item.Country)</div>
                    <div class="visit">
                        @Html.ActionLink("Edit", "Edit", new { id = item.CountryID }, new { @class = "genric-btn primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CountryID }, new { @class = "genric-btn danger" })
                    </div>

                </div>
            }

        </div>
    </div>
</div>
